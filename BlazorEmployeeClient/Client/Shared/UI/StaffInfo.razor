

<div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
    <div class="card-header">
        <h3>@Staff.FullName</h3>
    </div>
    <div class="card-body">
        <img class="card-img-top" src="@Staff.PhotoPath" />
    </div>
    <div class="card-footer text-center">
        <button class="btn btn-primary" type="button" @onclick="ViewAndListStaff" style="font-weight: bold">@ViewAndListButton</button>
        <button class="btn btn-warning" type="button" @onclick="EditStaff" style="font-weight: bold">Edit</button>
        <button class="btn btn-danger" type="button" @onclick="DeleteStaff" style="font-weight: bold">Delete</button>
    </div>
</div>


@code {
    [Parameter]
    public StaffView Staff { get; set; }

    [Parameter]
    public EventCallback ViewAndListStaff { get; set; }

    [Parameter]
    public EventCallback EditStaff { get; set; }

    [Parameter]
    public EventCallback DeleteStaff { get; set; }

    [Parameter]
    public string ViewAndListButton { get; set; }

}
