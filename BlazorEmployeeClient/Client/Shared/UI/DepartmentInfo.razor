

<div class="border" style="width: 50%">
    <div class="card-header text-center">
        <h3>Department Detail</h3>
    </div>
    <div class="card-body">
        <table>
            <tbody>
                <tr>
                    <td>Deparment ID : @Department.DepartmentID</td>
                </tr>
                <tr>
                    <td>Deparment Name : @Department.DepartmentName</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <button type="button" class="btn btn-outline-danger btn-block" @onclick="DeleteClick" style="font-weight: bold">
            Delete
        </button>
        <button type="button" class="btn btn-outline-dark btn-block" @onclick="BackToList" style="font-weight: bold">
            Back to List
        </button>
    </div>
</div>


@code {
    [Parameter]
    public DepartmentView Department { get; set; } = new DepartmentView();

    [Parameter]
    public EventCallback DeleteClick { get; set; }

    [Parameter]
    public EventCallback BackToList { get; set; }

   
}